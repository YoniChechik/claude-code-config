{
  "permissions": {
    "allow": [
      "Read",
      "MultiRead",
      "Bash",
      "WebFetch",
      "Edit",
      "Write",
      "SlashCommand"
    ],
    "deny": [],
    "defaultMode": "bypassPermissions"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/cleanup_untracked_worktrees.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/notification_on_stop.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/notification_on_stop.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
